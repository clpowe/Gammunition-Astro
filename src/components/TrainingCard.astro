---
const { price, time, description, info } = Astro.props;
---

<div class="training">
  <div class="price">
    <h1>${ price }</h1>
    <h3 class="text-accent uppercase">per person</h3>
  </div>
  <div class="sm:text-left text-center mt-2 space-y-1">
    <h2>{time}</h2>
    <p class="text-secondary-light">{description}</p>
    <h4 class="text-accent uppercase">{info}</h4>
  </div>
</div>

<style lang="scss">
.training {
  display: flex;
  flex-direction: column;
  max-width: 28rem;

  @media (min-width: 640px) {
    flex-direction: row;
    text-align: center;  
  }
}

.price{
  display: flex;
  align-items: flex-start;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-grow: 0;
  margin-right: 1rem;
}

h1{
  color: white;
  font-size: 4rem;
  font-weight: 500;
  margin-top: -1rem;
  flex-grow: 0;
}

h2{
  color: white;
  text-transform: uppercase;
}

h3{
  font-size:.9rem;
  letter-spacing: .5px;
  margin-top: -0.8rem
}

h4{
  font-weight: 200;
  letter-spacing: .5px;
}

p{
  font-weight: 200;
  letter-spacing: .5px;
  font-size: .8rem;
}
</style>