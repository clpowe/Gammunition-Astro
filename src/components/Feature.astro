---
const KEY = process.env.SNOWPACK_PUBLIC_API_KEY
const HEADERS = {
      headers: { Authorization: `Bearer ${KEY}` },
    }
const responce = await fetch(`https://api.airtable.com/v0/${process.env.SNOWPACK_PUBLIC_BASE_ID}/Sections/recOIuqY2pFHhzKuO`,
      HEADERS)
const data = await responce.json()
---


<div class="bg-gradient-to-b from-primary to-yellow-300 grid place-content-center py-20 px-auto">
  <div class="text-center max-w-xl space-y-2 px-2">
    <div class="font-oswald text-xl">{ data.fields.subhead }</div>
    <div class="font-oswald text-3xl ">{data.fields.head}</div>
    <p>{data.fields.Text}
    </p>
  </div>
</div>

