---
const { img, quote, name } = Astro.props;
---

<div class="grid place-content-center">
       <div class="text-white space-y-2 text-center grid justify-items-center p-6">
      
          <div class="rounded-full h-20 w-20 overflow-hidden">
              <img src={img} alt="">
          </div>
              <p class="font-roboto text-body  max-w-md">{quote}</p>
            
          
          <h3 class="text-lg uppercase font-oswald font-bold tracking-wider">{name}</h3>
       </div>
</div>

<style>
p::before {
  content: '"';
  font-size: 10rem;
  position: absolute;
  opacity: .1;
  font-family: 'Oswald';
}
</style>