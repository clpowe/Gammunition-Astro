---
const { info , item, price } = Astro.props;
---

<div class="w-full md:w-96 flex p-4 bg-white rounded-md shadow-md text-left flex-row items-center gap-1.5">
  <div class="description flex mr-auto flex-col pr-1">
    <div class="font-oswald uppercase flex-grow-0 text-xl leading-6 mb-1 font-bold">{item}</div>
    <div class="info text-secondary font-oswald uppercase font-medium text-lg tracking-wider leading-5">{info}</div>
  </div>
  <div class="font-bold text-2xl pl-2 self-end">${price}.00</div>
</div>

