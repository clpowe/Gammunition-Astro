---
const { info , item, price } = Astro.props;
---

<div class="w-full max-w-sm flex p-4 bg-white rounded-md shadow-md text-left flex-row items-center gap-1.5">
  <div class="description flex m-auto flex-col pr-1">
    <h1 class="font-oswald uppercase flex-grow-0 text-2xl leading-6 mb-1 whitespace-pre-line">{item}</h1>
    <h3 class="info text-yellow-500 font-oswald uppercase font-medium text-lg tracking-wider leading-5">{info}</h3>
  </div>
  <h1 class="font-bold text-4xl pl-2 self-end">${price}.00</h1>
</div>

<style lang="scss">
.description{ 
  border-right: 1px solid #bdbdbd;
}
</style>