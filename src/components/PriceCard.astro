---
const { info , item, price } = Astro.props;
---

<div class="price-container shadow-md text-left">
  <div class="description">
    <h1 class="item font-oswald">{item}</h1>
    <h3 class="info text-accent font-oswald text-left">{info}</h3>
  </div>
  <h1 class="price">${price}</h1>
</div>

<style lang="scss">
.price-container {
  display: flex;
  padding: .5rem;
  background: white;
  border-radius: .4rem;
  width: 100%;
}

.description {
  display: flex;
  margin-right: auto;
  flex: 0 1 auto;
}

.item {
  text-transform: uppercase;
  flex: 0 1 auto;
  margin-right: 1rem;
  align-self: flex-end;
}

.info {
  text-transform: uppercase;
  font-weight: 300;
  font-size: .6rem;
  align-self: flex-end;
  margin-bottom: .1rem;
}
</style>